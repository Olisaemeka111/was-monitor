{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:CreateTable",
                "dynamodb:DeleteTable",
                "dynamodb:DescribeTable",
                "dynamodb:TagResource",
                "dynamodb:ListTagsOfResource",
                "dynamodb:DescribeContinuousBackups",
                "dynamodb:UpdateContinuousBackups",
                "dynamodb:DescribeTimeToLive",
                "dynamodb:UpdateTimeToLive",
                "ecs:CreateCluster",
                "ecs:DeleteCluster",
                "ecs:DescribeClusters",
                "ecs:ListClusters",
                "ecs:RegisterTaskDefinition",
                "ecs:DeregisterTaskDefinition",
                "ecs:DescribeTaskDefinition",
                "ecs:ListTaskDefinitions",
                "ecs:CreateService",
                "ecs:DeleteService",
                "ecs:DescribeServices",
                "ecs:UpdateService",
                "ecs:TagResource",
                "ecs:ListTagsForResource",
                "iam:PassRole"
            ],
            "Resource": [
                "arn:aws:dynamodb:us-east-1:156041437006:table/aws-monitor-accounts",
                "arn:aws:ecs:us-east-1:156041437006:cluster/aws-monitor",
                "arn:aws:ecs:us-east-1:156041437006:task-definition/aws-monitor:*",
                "arn:aws:ecs:us-east-1:156041437006:service/aws-monitor/aws-monitor",
                "arn:aws:iam::156041437006:role/*"
            ]
        }
    ]
}
